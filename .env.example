# ── Telegram ──
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ── OpenAI ──
OPENAI_API_KEY=your_openai_api_key_here

# ── Google Sheets ──
# Option A (recommended for cloud): Paste the ENTIRE JSON content as a single line
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"...","private_key":"...",...}
# Option B (for local dev): Path to the JSON key file
# GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./credentials.json
GOOGLE_SHEET_ID=your_google_sheet_id_here

# ── Summary ──
# Expenses above this amount will be flagged as "high-value" in /week and /month
HIGH_VALUE_THRESHOLD=500

# ── Scheduled Summaries ──
# Your Telegram chat ID (send /start to @userinfobot to find it)
TELEGRAM_CHAT_ID=your_chat_id_here
# Timezone for scheduled messages (default: Asia/Kolkata)
TIMEZONE=Asia/Kolkata
